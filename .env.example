# ScheduleRight Environment Configuration
# Copy this file to .env.local and fill in your values

# =======================
# Database Configuration
# =======================

# Database provider: 'couchdb' or 'mysql' (default: mysql)
DB_PROVIDER=mysql

# CouchDB Configuration (if DB_PROVIDER=couchdb)
COUCHDB_URL=http://localhost:5984
COUCHDB_USER=admin
COUCHDB_PASSWORD=changeme

# MySQL Configuration (if DB_PROVIDER=mysql)
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_DATABASE=scheduleright
MYSQL_USER=root
MYSQL_PASSWORD=password

# =======================
# Server Configuration
# =======================

NODE_ENV=development
SERVER_PORT=3001
SERVER_URL=http://localhost:3001
API_VERSION=v1

# =======================
# Next.js Web App
# =======================

NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_ORG_ID=default-org
NEXT_PUBLIC_SITE_ID=default-site

# =======================
# Redis Configuration
# =======================

REDIS_URL=redis://redis:6379

# =======================
# Authentication
# =======================

# Generate a secure random string (at least 32 characters)
# You can use: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
JWT_SECRET=your-secret-key-change-in-production-min-32-chars
JWT_EXPIRY=900
REFRESH_TOKEN_EXPIRY=604800

# =======================
# CORS Configuration
# =======================

# Comma-separated list of allowed origins
CORS_ORIGIN=http://localhost:3000,http://localhost:3001,http://localhost:3003

# =======================
# Twilio SMS Configuration
# =======================

# Get these from https://www.twilio.com/console
# Sign up for a free trial account to get $15 credit (~30 messages)

# Your Twilio Account SID (starts with AC...)
TWILIO_ACCOUNT_SID=AC_YOUR_SID_HERE

# Your Twilio Auth Token
TWILIO_AUTH_TOKEN=YOUR_AUTH_TOKEN_HERE

# Your Twilio Phone Number (E.164 format: +1234567890)
TWILIO_PHONE_NUMBER=+15551234567

# Optional: Twilio Verify SID for phone verification
TWILIO_VERIFY_SID=VA_YOUR_VERIFY_SID_HERE

# =======================
# Observability
# =======================

LOG_LEVEL=info
OTEL_ENABLED=false
OTEL_TRACE_SAMPLE_RATE=0.1

# =======================
# Optional: Default Organization
# =======================

# Used for login page branding when no orgId is specified
NEXT_PUBLIC_DEFAULT_ORG_ID=

